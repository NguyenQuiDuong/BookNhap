<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.mock.bookstore.model.BookDetail" table="book_detail" schema="book">
        <id name="id" column="id"/>
        <property name="name" column="name"/>
        <property name="authorId" column="author_id"/>
        <property name="typeId" column="type_id"/>
        <property name="storeId" column="store_id"/>
        <property name="description" column="description"/>
        <property name="publicedYear" column="publiced_year"/>
        <property name="producerId" column="producer_id"/>
    </class>
</hibernate-mapping>